<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taxista.MapsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En camino a"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/subtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel ParaÃ­so"
            android:textSize="16sp"
            android:paddingBottom="12dp" />


        <ImageView
            android:id="@+id/imageMapa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/maps"
            android:layout_marginTop="40dp"
            android:contentDescription="mapa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6D698"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:elevation="4dp">

            <!-- Foto del conductor -->
            <ImageView
                android:id="@+id/imgConductor"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/roberto"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:clipToOutline="true"
                android:background="@drawable/circle_background" />

            <!-- Info conductor -->

            <!-- Tiempo y distancia -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roberto Tafur"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="945 854 123" />

                <TextView
                    android:id="@+id/tvViajes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 viajes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvTiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 min."
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDistancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.85 km"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>