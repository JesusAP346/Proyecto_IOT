<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/nunito_black"
            android:text="Perfil de Usuario"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Foto -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFotoUsuario"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/nunito_black"
            android:text="Carlos Tafur"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Tarjetas de estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="#FFE2B3"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:text="Total de viajes completados"
                    android:textSize="13sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvViajes"
                    android:text="98 de 100"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_black"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="#FFE2B3"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <TextView
                    android:text="Calificación de los conductores"
                    android:textSize="13sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvCalificacion"
                    android:text="4.96"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_black"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Detalles -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="@font/nunito_black"
            android:layout_marginBottom="8dp"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/tvDocumento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Documento de identidad: 7561701"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginBottom="4dp"/>

            <TextView android:id="@+id/tvCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Correo electrónico: correo@gmail.com"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginBottom="4dp"/>

            <TextView android:id="@+id/tvTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Teléfono: 952530495"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginBottom="4dp"/>

            <TextView android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Dirección: Avenida Bolívar 2150"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginBottom="4dp"/>

            <TextView android:id="@+id/tvHabitaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Habitaciones registradas: 20"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginBottom="4dp"/>

            <TextView android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Estado de cuenta: activo"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
