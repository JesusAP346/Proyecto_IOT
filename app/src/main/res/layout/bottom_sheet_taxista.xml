<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FDE6C6"
    android:padding="24dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp" />

    <!-- Encabezado -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edita el perfil"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

    </RelativeLayout>

    <!-- Imagen circular -->
    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_perfil_circulo"
        android:clipToOutline="true"
        android:background="@drawable/circle_background" />

    <!-- Botón cambiar (galería) -->
    <TextView
        android:id="@+id/btnCambiarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar foto de galería"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E06F3E"
        android:background="@drawable/rounded_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center" />

    <!-- Botón tomar foto (cámara) -->
    <TextView
        android:id="@+id/btnTomarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomar foto con cámara"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F2854A"
        android:background="@drawable/rounded_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu perfil"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La información que compartas se usará en toda la aplicación para que otros clientes y administradores de hotel te conozcan mejor"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Botón inferior -->
    <Button
        android:id="@+id/btnListo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listo"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F2A65A"
        android:layout_marginTop="24dp" />
</LinearLayout>
