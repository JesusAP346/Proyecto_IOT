<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient"
    android:padding="16dp"
    android:scrollbars="none"
    android:backgroundTint="@color/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🔝 Título: fuera de la Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backdetallecheckout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Atrás" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Check out"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- 🧾 CARD GENERAL -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Habitación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textHabitacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habitación"
                        android:textStyle="bold"

                        android:textSize="15sp" />

                    <!-- Este View empuja las fechas hacia la derecha -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textCantNoches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(por 2 dias)"
                        android:textColor="#6A6A6A"
                        android:textSize="13sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textNombreHabitacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stándar"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textPrecioHabitacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 500.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- Noches extras -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noches extras"
                        android:textStyle="bold"

                        android:textSize="15sp" />

                    <!-- Este View empuja las fechas hacia la derecha -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textCheckin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26/10/2024 -"
                        android:textColor="#6A6A6A"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textCheckout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 28/10/2024"
                        android:textColor="#6A6A6A"
                        android:textSize="13sp" />
                </LinearLayout>





                <!-- Noche extra editable -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_noches_extra"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textPrecioNocheExtra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 0.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- LÍNEA debajo del campo -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_marginBottom="8dp"
                    android:background="#CCCCCC" />


                <!-- Servicios adicionales -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Servicios extra"
                        android:textStyle="bold"
                        android:textSize="15sp" />


                </LinearLayout>


                <!-- Texto vacío de servicios extra -->
                <TextView
                    android:id="@+id/textSinServicios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin servicios extra agregados"
                    android:textColor="#777777"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Layout dinámico de servicios extra -->
                <LinearLayout
                    android:id="@+id/layout_servicios_dinamicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Consumo"
                        android:textStyle="bold"
                        android:textSize="15sp" />


                </LinearLayout>


                <!-- Texto vacío de servicios extra -->
                <TextView
                    android:id="@+id/textSinConsumo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin consumo agregado"
                    android:textColor="#777777"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Layout dinámico de servicios extra -->
                <LinearLayout
                    android:id="@+id/layout_consumo_dinamicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp" />





                <!-- Cargos por daños -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cargos por daños "
                        android:textStyle="bold"
                        android:textSize="15sp" />


                </LinearLayout>


                <!-- Texto vacío de servicios extra -->
                <TextView
                    android:id="@+id/textSinCargosPorDanos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin cargos extra agregados"
                    android:textColor="#777777"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Layout dinámico de servicios extra -->
                <LinearLayout
                    android:id="@+id/layout_cargos_dinamicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp" />



                <!-- TOTAL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"/>

                <!-- Cobros -->
                <!-- Cobros -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_cobro_sin_igv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 0.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="IGV (18%)"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_igv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 0.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Pago total"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 0.00"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 💳 CARD DE DATOS DE PAGO - Versión Sutil -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Método de pago"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Información de la tarjeta en una sola fila -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="#F8F9FA">

                    <!-- Logo de la marca -->
                    <ImageView
                        android:id="@+id/img_marca_tarjeta_simple"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_visa_logo"
                        android:layout_marginEnd="12dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="Logo de la marca" />

                    <!-- Información de la tarjeta -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Marca y últimos 4 dígitos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/text_marca_simple"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visa"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/text_ultimos_digitos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 6308"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </LinearLayout>



                        <!-- Titular -->
                        <TextView
                            android:id="@+id/text_titular_simple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Juan P."
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Línea divisoria -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="8dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 🚕 Servicio de Taxi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicio de Taxi por consumo mínimo"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_ir_servicio_taxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver servicio de taxi"
                        android:textColor="@android:color/black"
                        android:backgroundTint="#EEEEEE"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/ic_taxi2"
                        app:iconTint="@android:color/black"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:strokeWidth="0dp"
                        style="@style/Widget.MaterialComponents.Button" />


                </LinearLayout>
                <TextView
                    android:id="@+id/textSinServicioTaxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Servicio de taxi no incluido"
                    android:textColor="#777777"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
