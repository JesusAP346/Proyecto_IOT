<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingHorizontal="8dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_registrar_informacion"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:minHeight="60dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="+ Registrar Habitación"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:backgroundTint="#FACEC6"
            app:cornerRadius="12dp"
            app:strokeColor="#772f1a"
            app:strokeWidth="1dp" />

        <!-- CardView 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel1"
                    android:contentDescription="Imagen habitación" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deluxe King"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Habitaciones registradas:"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#888888" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:text="2"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVerDetalles"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:minHeight="34dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="2dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Ver detalles"
                        android:textSize="13sp"
                        android:textColor="@android:color/black"
                        app:cornerRadius="10dp"
                        app:backgroundTint="#FACEC6"
                        app:strokeColor="#772f1a"
                        app:strokeWidth="1dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

