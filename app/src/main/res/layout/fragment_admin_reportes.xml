<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient">

    <!-- Filtro fijo -->
    <LinearLayout
        android:id="@+id/layoutFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filtro"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true">

        <!-- Icono calendario -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calendar_days_solid"
            android:tint="#000000"
            android:contentDescription="Icono calendario"
            android:layout_marginEnd="8dp" />

        <!-- Desde -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desde"
                android:textSize="12sp"
                android:textColor="#555555" />

            <EditText
                android:id="@+id/etSelectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dd/mm/aaaa"
                android:textSize="14sp"
                android:background="@drawable/underline_edittext"
                android:textColor="@android:color/black"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- Hasta -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasta"
                android:textSize="12sp"
                android:textColor="#555555" />

            <EditText
                android:id="@+id/etSelectDate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dd/mm/aaaa"
                android:textSize="14sp"
                android:background="@drawable/underline_edittext"
                android:textColor="@android:color/black"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:paddingVertical="4dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/errorTipoFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:drawableStart="@drawable/ic_warning_admin"
        android:drawablePadding="8dp"
        android:textColor="#D32F2F"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Línea divisora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#BDBDBD"
        android:layout_below="@id/layoutFiltro"
        android:layout_marginHorizontal="16dp" />

    <!-- Scroll para reportes -->
    <ScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutFiltro"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección Reporte de Ventas por Servicio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ventas por Servicio (Menor a Mayor)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Header de la tabla -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#E0E0E0"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Servicio"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#555555" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cantidad"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:gravity="end" />
                </LinearLayout>

                <!-- RecyclerView para servicios -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_servicios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp" />
            </LinearLayout>

            <!-- Sección Reporte de Ventas por Usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ventas por Usuario (Mayor a Menor)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Header de la tabla -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#E0E0E0"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Usuario"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#555555" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Monto Total"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:gravity="end" />
                </LinearLayout>

                <!-- RecyclerView para usuarios -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_usuarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
