<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ✅ STEPPER -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F0EFEA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="6dp"
                        android:background="@drawable/step_active_circle"
                        android:src="@drawable/ic_check"
                        android:tint="#FFFFFF" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:background="#4CAF50" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="6dp"
                        android:background="@drawable/step_active_circle"
                        android:src="@drawable/ic_check"
                        android:tint="#FFFFFF" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:background="#4CAF50" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="6dp"
                        android:background="@drawable/step_active_circle"
                        android:src="@drawable/ic_check"
                        android:tint="#FFFFFF" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:background="#4CAF50" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:background="@drawable/step_active_circle"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumen de la habitación"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ✅ GRUPO 1: Info General -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información general"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tipo de habitación" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Stándar" android:textSize="14sp" android:background="@drawable/bg_edittext_simulado" android:padding="8dp" android:layout_marginBottom="12dp"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Capacidad" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2 adultos" android:textSize="14sp" android:background="@drawable/bg_edittext_simulado" android:padding="8dp" android:layout_marginBottom="12dp"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tamaño en m²" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="78" android:textSize="14sp" android:background="@drawable/bg_edittext_simulado" android:padding="8dp" android:layout_marginBottom="12dp"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Precio por noche (soles S/.)" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="150" android:textSize="14sp" android:background="@drawable/bg_edittext_simulado" android:padding="8dp" android:layout_marginBottom="12dp"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cantidad de habitaciones" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="3" android:textSize="14sp" android:background="@drawable/bg_edittext_simulado" android:padding="8dp" android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ✅ GRUPO 2: Equipamiento -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Equipamiento"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Fila 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/bg_edittext_simulado"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TV"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/bg_edittext_simulado"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Aire acondicionado"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fila 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/bg_edittext_simulado"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Toalla"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/bg_edittext_simulado"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Caja fuerte"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fila 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/bg_edittext_simulado"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Wifi"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/bg_edittext_simulado"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Escritorio"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ✅ GRUPO 3: Servicios -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Servicios"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Servicios -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_simulado"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Traslado a aeropuerto"
                            android:textSize="14sp"
                            android:textColor="#000000" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_simulado"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gimnasio"
                            android:textSize="14sp"
                            android:textColor="#000000" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_simulado"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Desayuno"
                            android:textSize="14sp"
                            android:textColor="#000000" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ✅ GRUPO 4: FOTOS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fotos de la habitación"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/carousel"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ✅ BOTÓN FINALIZAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinalizar"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="Finalizar"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:backgroundTint="#FACEC6"
                app:cornerRadius="12dp"
                app:strokeColor="#772f1a"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

