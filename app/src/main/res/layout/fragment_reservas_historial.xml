<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gradient"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:layout_marginBottom="8dp">

        <!-- Icono calendario -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar_days_solid"
            android:tint="#000000"
            android:contentDescription="Filtrar"
            android:layout_marginEnd="8dp" />

        <!-- Texto "Filtrar desde" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtrar desde"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="4dp" />

        <!-- EditText DESDE -->
        <EditText
            android:id="@+id/etSelectDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="dd/mm/aaaa"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:inputType="none"
            android:background="@drawable/underline_edittext"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginEnd="8dp" />

        <!-- Texto "hasta" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hasta"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="4dp" />

        <!-- EditText HASTA -->
        <EditText
            android:id="@+id/etSelectDatek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="dd/mm/aaaa"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:inputType="none"
            android:background="@drawable/underline_edittext"
            android:focusable="false"
            android:clickable="true" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReservasTodas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:clipToPadding="false"
        android:scrollbars="none" />

    <!-- Mensaje cuando no hay habitaciones -->
    <LinearLayout
        android:id="@+id/layoutMensajeVacio"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tiene reservas pasadas"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/icono_calendariochevere"
            android:scaleType="centerInside"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</LinearLayout>
