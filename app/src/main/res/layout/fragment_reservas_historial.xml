<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gradient"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filtro"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

    <!-- Icono calendario -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_calendar_days_solid"
        android:tint="#000000"
        android:contentDescription="Icono calendario"
        android:layout_marginEnd="8dp" />

    <!-- Desde -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desde"
            android:textSize="12sp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/etSelectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/aaaa"
            android:textSize="14sp"
            android:background="@drawable/underline_edittext"
            android:textColor="@android:color/black"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <!-- Hasta -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasta"
            android:textSize="12sp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/etSelectDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/aaaa"
            android:textSize="14sp"
            android:background="@drawable/underline_edittext"
            android:textColor="@android:color/black"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:paddingVertical="4dp" />
    </LinearLayout>
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/errorTipoFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/ic_warning_admin"
        android:drawablePadding="8dp"
        android:textColor="#D32F2F"
        android:textSize="12sp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReservasTodas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:clipToPadding="false"
        android:scrollbars="none" />

    <!-- Mensaje cuando no hay habitaciones -->
    <LinearLayout
        android:id="@+id/layoutMensajeVacio"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tiene reservas pasadas"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/icono_calendariochevere"
            android:scaleType="centerInside"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</LinearLayout>
