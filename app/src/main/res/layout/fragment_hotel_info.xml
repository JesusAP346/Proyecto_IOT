<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tipo de habitación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de habitación"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#FF000000" />

            <TextView
                android:id="@+id/tvTipoHabitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estandar"
                android:background="@drawable/bg_edittext_simulado"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#858585"
                android:layout_marginTop="4dp"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

        <!-- Dirección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miraflores"
                android:textSize="16sp"
                android:textColor="#858585"
                android:background="@drawable/bg_edittext_simulado"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

        <!-- Coordenadas GPS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCoordenadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acá se seleccionará la ubicación por medio maps"
                android:textSize="16sp"
                android:textColor="#858585"
                android:background="@drawable/bg_edittext_simulado"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

        <!-- Referencias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugares históricos o referencias"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvReferencia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parque Kennedy"
                android:textSize="16sp"
                android:textColor="#858585"
                android:background="@drawable/bg_edittext_simulado"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:focusable="false"
                android:clickable="false" />

            <TextView
                android:id="@+id/tvReferencia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plasa Sésamo"
                android:textSize="16sp"
                android:textColor="#858585"
                android:background="@drawable/bg_edittext_simulado"
                android:padding="8dp"
                android:layout_marginBottom="2dp"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

        <!-- Título de Fotos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fotos del hotel e instalaciones"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!-- Botón Actualizar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActualizar"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:minHeight="60dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center_horizontal"
            android:text="Actualizar información"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:cornerRadius="12dp"
            app:strokeColor="#772f1a"
            app:strokeWidth="1dp"
            app:backgroundTint="#FACEC6" />
    </LinearLayout>
</ScrollView>