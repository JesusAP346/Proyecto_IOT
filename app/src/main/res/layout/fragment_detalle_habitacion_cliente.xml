<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- Carrusel de imágenes -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerHabitacion"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/bg_rounded_8dp" />

                <!-- Indicadores del carrusel -->
                <LinearLayout
                    android:id="@+id/indicatorContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp" />

                <!-- Título de la habitación -->
                <TextView
                    android:id="@+id/textTitulo"
                    android:text="Habitación Doble Estándar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black" />

                <!-- Información básica -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_8dp"
                    android:padding="16dp">

                    <TextView
                        android:text="Información de la habitación"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/textCantidadHabitaciones"
                        android:text="1 habitación disponible"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_dark"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textCapacidad"
                        android:text="Máx 2 adultos"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_dark"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textTamanho"
                        android:text="25 m²"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_dark" />

                </LinearLayout>

                <!-- Equipamiento -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_8dp"
                    android:padding="16dp">

                    <TextView
                        android:text="Equipamiento"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/equipamientoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <!-- Servicios incluidos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_8dp"
                    android:padding="16dp">

                    <TextView
                        android:text="Servicios incluidos"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/serviciosContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <!-- Servicios adicionales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_8dp"
                    android:padding="16dp">

                    <TextView
                        android:text="Servicios adicionales"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerServiciosAdicionales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/textNoServiciosAdicionales"
                        android:text="No hay servicios adicionales disponibles"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_dark"
                        android:gravity="center"
                        android:padding="16dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Precio y botón de reserva -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_rounded_8dp"
                    android:padding="16dp">

                    <TextView
                        android:text="Precio por noche"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_dark"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textPrecio"
                        android:text="S/. 365.00"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />

                    <!-- Mostrar servicios adicionales seleccionados -->
                    <LinearLayout
                        android:id="@+id/layoutServiciosSeleccionados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:text="Servicios adicionales:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textServiciosSeleccionados"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textFechasEstadia"
                        android:text=" "
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/textPrecioTotal"
                        android:text="Total: S/. 365.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btnReservar"
                        android:text="Reservar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFC107"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="16dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Botón de retroceso -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_circle_white"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            android:elevation="4dp"
            android:scaleType="centerInside"
            app:tint="@color/black" />

    </RelativeLayout>

    <!-- Botón de chat flotante -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Abrir chat"
        app:srcCompat="@drawable/ic_chat"
        app:tint="@android:color/white"
        app:backgroundTint="#000000" />

</FrameLayout>