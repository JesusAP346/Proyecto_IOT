<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÍTULO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backdetallehabitacion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Atrás" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Detalles de la habitación"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- Tipo de habitación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de habitación"
            android:textStyle="bold"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/txtTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Suite Ejecutiva"
            android:background="@drawable/bg_edittext_simulado"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Capacidad -->
        <!-- Capacidad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacidad"
            android:textStyle="bold"
            android:textSize="12sp" />

        <!-- Adultos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adultos"

                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnMenosAdultos"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_minus6"
                android:background="@drawable/bg_circle_outline"
                android:tint="@color/rojizoProyect"
                android:layout_marginRight="10dp"
                android:contentDescription="Más adultos" />

            <TextView
                android:id="@+id/textCantidadAdultos"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_square_outline" />

            <ImageButton
                android:id="@+id/btnMasAdultos"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/bg_circle_outline"
                android:tint="@color/rojizoProyect"
                android:contentDescription="Más adultos" />
        </LinearLayout>

        <!-- Niños -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Niños"

                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnMenosNinos"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_minus6"
                android:background="@drawable/bg_circle_outline"
                android:tint="@color/rojizoProyect"
                android:layout_marginRight="10dp"
                android:contentDescription="Más adultos" />

            <TextView
                android:id="@+id/textCantidadNinos"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_square_outline" />

            <ImageButton
                android:id="@+id/btnMasNinos"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/bg_circle_outline"
                android:tint="@color/rojizoProyect"
                android:contentDescription="Más niños" />
        </LinearLayout>



        <!-- Tamaño -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamaño en m²"
            android:textStyle="bold"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/txtTamanho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 30"
            android:background="@drawable/bg_edittext_simulado"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio por Noche (soles S/. )"
            android:textStyle="bold"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtPrecioPorNoche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2"
            android:background="@drawable/bg_edittext_simulado"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitaciones registradas"
            android:textStyle="bold"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtHabitacionesRegistradas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2"
            android:background="@drawable/bg_edittext_simulado"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />


        <!-- Spinner Equipamiento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Equipamiento"
            android:textStyle="bold"
            android:textSize="12sp" />
        <Spinner
            android:id="@+id/spinnerEquipamiento"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/bg_edittext_simulado"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="0dp"
            android:entries="@array/equipamiento_array" />


        <!-- Chips de Equipamiento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipamiento"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textEquipamientoVacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ! Sin equipamiento agregado, seleccione uno"
            android:textColor="#B00020"
            android:textStyle="bold"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/layoutEquipamientoDinamico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />



        <!-- Spinner Servicios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Servicio"
            android:textStyle="bold"
            android:textSize="12sp" />
        <Spinner
            android:id="@+id/spinnerServicios"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/bg_edittext_simulado"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:entries="@array/servicios_array"
            android:layout_marginBottom="0dp" />

        <!-- Chips de Servicios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servicios"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textServicioVacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="❗ Sin servicios agregados, seleccione uno"
            android:textColor="#B00020"
            android:textStyle="bold"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:id="@+id/layoutServicioDinamico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- FOTOS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar nuevas fotos"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_edittext_simulado"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_camera"
                android:tint="#9E9EA6"
                android:contentDescription="Agregar foto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subir fotos"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fotos agregadas"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Imagen 1 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel1"
                    android:background="@drawable/img_rounded_corners"
                    android:clipToOutline="true" />

                <ImageButton
                    android:id="@+id/btnEliminarImg1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="6dp"
                    android:background="@drawable/btn_circle_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@android:color/white"
                    android:contentDescription="Eliminar imagen"
                    android:scaleType="centerInside" />
            </FrameLayout>

            <!-- Imagen 2 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel2"
                    android:background="@drawable/img_rounded_corners"
                    android:clipToOutline="true" />

                <ImageButton
                    android:id="@+id/btnEliminarImg2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="6dp"
                    android:background="@drawable/btn_circle_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@android:color/white"
                    android:contentDescription="Eliminar imagen"
                    android:scaleType="centerInside" />
            </FrameLayout>
        </LinearLayout>

        <!-- Botones: Actualizar y Eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp">

            <!-- Botón Actualizar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActualizar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="54dp"
                android:minHeight="60dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="Actualizar"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                app:cornerRadius="12dp"
                app:strokeColor="#772f1a"
                app:strokeWidth="1dp"
                app:backgroundTint="#FACEC6" />

            <!-- Botón Eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="54dp"
                android:minHeight="60dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="Eliminar"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                app:cornerRadius="12dp"
                app:strokeColor="#772f1a"
                app:strokeWidth="1dp"
                app:backgroundTint="#FFE0C4" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
