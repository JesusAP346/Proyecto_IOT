<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Imagen del servicio -->
        <ImageView
            android:id="@+id/imagenServicio"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gimnasio"
            android:contentDescription="Imagen servicio" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="4dp">

            <!-- Nombre del servicio -->
            <TextView
                android:id="@+id/textoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Servicio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="6dp" />

            <!-- Botón Ver Detalles (con estilo limpio y sobrio, sin mayúsculas) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerDetalles"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:minHeight="34dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="2dp"
                android:layout_gravity="center_horizontal"
                android:text="Ver detalles"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:cornerRadius="10dp"
                app:backgroundTint="#F4F4F4"
                app:strokeColor="#D1D1D1"
                app:strokeWidth="1dp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
