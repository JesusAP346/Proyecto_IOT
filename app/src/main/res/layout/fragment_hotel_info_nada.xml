<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/centered_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- MENSAJE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lo sentimos, aún no ha registrado información\ndel hotel a cargo"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- IMAGEN DEL HOTEL -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/hotel_sad"
            android:scaleType="centerInside"
            android:layout_marginBottom="24dp" />

        <!-- BOTÓN PARA REGISTRAR -->
        <Button
            android:id="@+id/btn_registrar_informacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Registrar información"
            android:backgroundTint="#772f1a"
            android:textColor="#FFFFFF"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
