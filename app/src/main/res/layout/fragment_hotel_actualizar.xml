<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backActualizar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Atrás" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Actualizar información del hotel"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Nombre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del hotel"
            android:text="Televagos"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Dirección -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            android:text="Miraflores"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Coordenadas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordenadas GPS"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etCoordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitud, Longitud"
            android:text="-12.097667, -77.038793"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Referencias dinámicas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugares históricos o referencias"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etReferencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ingrese referencias"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/customedittext1"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregarReferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Agregar"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp"
                app:backgroundTint="#772f1a"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <!-- Fila: texto + icono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Parque Kennedy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Eliminar" />
            </LinearLayout>

            <!-- Línea inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#CCCCCC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <!-- Fila: texto + icono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Plasa Sésamo"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Eliminar" />
            </LinearLayout>

            <!-- Línea inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#CCCCCC" />
        </LinearLayout>
        <!-- Título imágenes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fotos del hotel e instalaciones"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!-- Botón Actualizar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Actualizar información"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:cornerRadius="10dp"
            app:backgroundTint="#772f1a" />
    </LinearLayout>
</ScrollView>
