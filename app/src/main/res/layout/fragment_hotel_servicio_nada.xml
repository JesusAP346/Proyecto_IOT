<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/centered_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- MENSAJE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lo sentimos, aún no ha registrado informaciónde los servicios \nadicionales que se ofrecen en el hotel"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="0dp" />

        <!-- IMAGEN DEL HOTEL -->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/servicio_sad"
            android:scaleType="centerInside"
            android:layout_marginBottom="-60dp" />

        <!-- BOTÓN PARA REGISTRAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_registrar_servicio"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:minHeight="60dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="+ Registrar Servicio"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:backgroundTint="#FACEC6"
            app:cornerRadius="12dp"
            app:strokeColor="#772f1a"
            app:strokeWidth="1dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
