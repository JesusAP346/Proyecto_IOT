<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taxista.InformacionPersonalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Botón de regreso -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_retroceder"
            android:contentDescription="Atrás" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información personal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Campo reusable -->
        <include layout="@layout/item_dato_editable"
            android:id="@+id/campoNombre"
            android:tag="Nombre legal|Roberto Tafur" />

        <include layout="@layout/item_dato_editable"
            android:tag="Documento de Identidad|DNI: 71986247" />

        <include layout="@layout/item_dato_editable"
            android:tag="Número telefónico|945 854 123" />

        <include layout="@layout/item_dato_editable"
            android:tag="Correo electrónico|o20210535@pucp.edu.pe" />

        <include layout="@layout/item_dato_editable"
            android:tag="Número telefónico|945 854 123" />

        <include layout="@layout/item_dato_editable"
            android:tag="Fecha de nacimiento|31/05/04" />

        <include layout="@layout/item_dato_editable"
            android:tag="Domicilio|Las Cucardas 232" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>