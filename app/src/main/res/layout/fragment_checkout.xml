<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🔝 Título: fuera de la Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backdetallehuesped"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Atrás" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Check out"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/chat_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Chat"
                android:src="@drawable/ic_chat" />
        </LinearLayout>

        <!-- 🧾 CARD GENERAL -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Habitación -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Habitación"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stándar"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 500.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- Noches extras -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noches extras"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 100.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- Consumo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Consumo"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_agregar_consumo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Agregar"
                        android:textSize="12sp"
                        android:backgroundTint="#DDDDDD"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Items consumo -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Snacks"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 10.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Agua"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 5.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- Servicios adicionales -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Servicios adicionales"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <Button android:id="@+id/btn_agregar_servicios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Agregar"
                        android:textSize="12sp"
                        android:backgroundTint="#DDDDDD"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Ítems adicionales -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sauna privado"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 30.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Acceso a gimnasio"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 30.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- Cargos agregados -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cargos agregados"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <Button android:id="@+id/btn_agregar_cargos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Agregar"
                        android:textSize="12sp"
                        android:backgroundTint="#DDDDDD"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Cargos -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Toalla perdida"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 10.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Control perdido"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 15.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- TOTAL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp" />

                <!-- Cobros -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cobro sin IGV"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 595.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="IGV (18%)"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 105.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pago total"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 700.00"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 🧾 Título pago -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Realizar Pago"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- 💳 Métodos de pago -->
                <LinearLayout
                    android:id="@+id/layout_metodos_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCredit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="Credit"
                        android:textSize="12sp"
                        android:backgroundTint="#EEEEEE"
                        android:textColor="#000000"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDebit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="Debit"
                        android:textSize="12sp"
                        android:backgroundTint="#EEEEEE"
                        android:textColor="#000000"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCash"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="Cash"
                        android:textSize="12sp"
                        android:backgroundTint="#EEEEEE"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- ✔️ Botón: Procesar pago -->
                <Button
                    android:id="@+id/btn_procesar_pago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procesar Pago"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#772f1a"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp" />

                <!-- 🚕 Servicio de Taxi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicio de Taxi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_ir_servicio_taxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ir a servicio de taxi"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#772f1a"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
