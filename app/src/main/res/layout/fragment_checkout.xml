<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🔝 Título: fuera de la Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backdetallecheckout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Atrás" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Check out"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- 🧾 CARD GENERAL -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Habitación -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Habitación"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stándar"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 500.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- Noches extras -->

                <!-- Noches extras -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/textNochesExtras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noches extras"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textCheckout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  (⚠ Check out: 26/10/2024)"
                        android:textColor="#6A6A6A"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Noche extra editable -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editNochesExtras"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textPrecioNocheExtra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 0.00"
                        android:textSize="14sp" />


                </LinearLayout>


                <!-- Consumo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Consumo"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_agregar_consumo"
                        android:layout_width="140dp"
                        android:layout_height="36dp"
                        android:text="+ Agregar"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        app:cornerRadius="10dp"
                        app:backgroundTint="#DDDDDD"
                        android:gravity="center"
                        android:minWidth="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp" />
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/layout_costos_dinamicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp" />

                <!-- Servicios adicionales -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Servicios extra"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/spinner_servicios"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="80dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textAlignment="center"
                        android:background="@drawable/bg_spinner_servicio"
                        />
                </LinearLayout>


                <!-- Ítems adicionales -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sauna privado"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 30.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Acceso a gimnasio"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 30.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- Cargos agregados -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cargos agregados"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_agregar_cargos"
                        android:layout_width="140dp"
                        android:layout_height="36dp"
                        android:text="+ Agregar"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        app:cornerRadius="10dp"
                        app:backgroundTint="#DDDDDD"
                        android:gravity="center"
                        android:minWidth="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp" />
                </LinearLayout>

                <!-- Cargos -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Toalla perdida"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 10.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Control perdido"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 15.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />

                <!-- TOTAL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"/>

                <!-- Cobros -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cobro sin IGV"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 595.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="IGV (18%)"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 105.00"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="4dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pago total"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 700.00"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 🧾 Título pago -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Realizar Pago"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="0dp" />

                <!-- ✔️ Botón: Procesar pago -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_procesar_pago"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:minHeight="60dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Procesar Pago"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="12dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="#772f1a"
                    app:strokeWidth="1dp"
                    app:backgroundTint="#FACEC6" />
                <!-- 🚕 Servicio de Taxi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicio de Taxi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="0dp" />

                <!-- ✔️ Botón: Ir a servicio taxi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ir_servicio_taxi"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:minHeight="60dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Ir a servicio de taxi"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="12dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="#772f1a"
                    app:strokeWidth="1dp"
                    app:backgroundTint="#FACEC6" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>
