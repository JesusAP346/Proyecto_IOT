<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 🧭 CABECERA -->
        <!-- 🧭 CABECERA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="28sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <!-- Campana con notificación -->
            <FrameLayout
                android:id="@+id/notificacion_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/iconoCampana"
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:src="@drawable/icono_campana"
                    android:contentDescription="Notificación" />

                <TextView
                    android:id="@+id/notificacionBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/btn_circle_background"
                    android:text="3"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp" />
            </FrameLayout>
        </RelativeLayout>



        <!-- 👋 Saludo y descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola Administrador,"
            android:textColor="#1A237E"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué te gustaría hacer hoy?"
            android:textColor="#333333"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <!-- 📦 Botonera 2x2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Botón 1: Habitaciones -->
            <LinearLayout
                android:id="@+id/btnHabitaciones"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/bg_button_border"                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginBottom="30dp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icono_cuarto"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habitaciones"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Botón 2: Servicios Extras -->
            <LinearLayout
                android:id="@+id/btnServiciosExtras"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/bg_button_border"                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginBottom="30dp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icono_servicio_extra"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios extras"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Botón 3: Reportes -->
            <LinearLayout
                android:id="@+id/btnReportes"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/bg_button_border"                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icono_reportes"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reportes"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Botón 4: Reservas -->
            <LinearLayout
                android:id="@+id/btnReservas"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/bg_button_border"                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icono_calendariochevere"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservas"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
