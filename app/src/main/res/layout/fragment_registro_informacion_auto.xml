<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cliente.modoTaxistaFormulario.RegistroInformacionAutoFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="#A28858">



        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/auto_roberto" />

        <EditText android:hint="Modelo" android:text="Modelo"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <EditText android:hint="Color" android:text="Rojo"
            android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>


</FrameLayout>