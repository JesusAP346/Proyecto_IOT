<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hotelevago_foreground" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_black"
            android:text="Cambiar Contraseña"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewLogo" />

        <!-- Campo: Contraseña actual -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPasswordActual"
            style="@style/CustomTextInputRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/ErrorTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPasswordActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_form_superadmin"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Contraseña actual"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo: Nueva contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPasswordNueva"
            style="@style/CustomTextInputRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/ErrorTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutPasswordActual">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPasswordNueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_form_superadmin"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Nueva contraseña"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo: Confirmar nueva contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPasswordConfirmar"
            style="@style/CustomTextInputRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/ErrorTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutPasswordNueva">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPasswordConfirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_form_superadmin"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Confirmar nueva contraseña"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones Guardar / Cancelar -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutPasswordConfirmar">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="148dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#F0C47C"
                android:fontFamily="@font/nunito_black"
                android:text="Guardar"
                android:textColor="@color/background_gradient"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="148dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#5D0E14"
                android:fontFamily="@font/nunito_black"
                android:text="Cancelar"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
