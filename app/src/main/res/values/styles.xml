<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">#DB7E63</item> <!-- Color de botones OK / CANCEL -->
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerTheme</item>
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">#D5785E</item> <!-- Botones OK/CANCEL -->
        <item name="android:textColorPrimary">#000000</item> <!-- Texto de los días -->
        <item name="android:background">#ffffff</item> <!-- Fondo del calendario -->
    </style>

    <style name="CustomTextInputRegister" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

    </style>

    <style name="CircleImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="HintSuperadmin" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">20sp</item> <!-- O el tamaño que desees -->
        <item name="android:textColor">#808080</item>
        <item name="android:fontFamily">@font/nunito_black</item>

    </style>

    <style name="ErrorTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">12sp</item>
    </style>



</resources>